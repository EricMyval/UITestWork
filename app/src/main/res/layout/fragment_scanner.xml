<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/circle_background_margin"
    tools:context="com.ericmyval.uitestwork.bluetooth.ScannerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/circle_background"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/bluetooth"
            android:layout_marginTop="@dimen/circle_background_margin"
            app:tint="@color/white"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/BLTitle" />

        <ListView
            android:id="@+id/lvBL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/circle_background_margin"/>

    </LinearLayout>

</LinearLayout>